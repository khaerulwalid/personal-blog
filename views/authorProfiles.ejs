<%- include("header", {title: "Author Profile"}) %>
    <% if(name) { %>
        <%- include("navbarDashboard", {name, role}) %>
    <% } %>
        
    <div class="container">
        <div style="display: flex; flex-direction: column; justify-content: center; align-items: center; margin: 60px auto;">
            <h1 class="fs-3">Complete your profile</h1>
            <% if(name) { %>
                <p>Name : <%= name %></p>
                <p>Birth Day : <%= data.indonesiaDate %></p>
                <p>Age : <%= data.age() %></p>
            <% } %>

            <form style="width: 50%;" action="/authors/profiles" method="post">
                <div class="form-group mb-2">
                  <label for="motto">Motto</label>
                  <input type="text" class="form-control" id="motto" placeholder="Enter your motto" name="motto">
                </div>
                <div class="form-group mb-2">
                  <label for="biography">Biography</label>
                  <textarea class="form-control" id="biography" name="biography" rows="3"></textarea>
                </div>
                
                <div class="form-group mb-2">
                    <label for="education">Education</label>
                    <% let education = ["SMA", "S1", "S2", "S3"] %>
                    <select class="form-control" name="education">
                        <option selected disabled>--Select Education--</option>
                        <% education.forEach(el => { %>
                            <option value="<%= el %>"><%= el %></option>
                        <% }) %>
                    </select>
                </div>
                
                <input type="submit" value="Save Profile" class="btn btn-primary">
              </form>
        </div>
    </div>
    

<%- include("footer") %>