<%- include("header", {title: "Author Register"}) %>
    <% if(name) { %>
        <%- include("navbarDashboard", {name, role}) %>
    <% } %>
    <div class="container">
        <div style="display: flex; flex-direction: column; justify-content: center; align-items: center; margin: 60px auto;">
            <h1 class="fs-3"><%= data.name %> Follower : </h1>
            <a href="/articles" class="mb-4">
                <button type="button" class="btn btn-primary">Your Article</button>
            </a>

                <table class="table">
                    <thead class="thead-light">
                      <tr>
                        <th scope="col">No</th>
                        <th scope="col">Follower</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                            <% data.Visitors.forEach((el, i) => { %>
                                <tr>
                                    <th scope="row"><%= i+1 %></th>
                                    <td><%= el.name %></td>
                                    <td>
                                        <a href="/authors/<%= el.id %>/removeFollower">
                                            <button type="button" class="btn btn-danger">Delete</button>
                                        </a>
                                    </td>
                                  </tr>
                            <% }) %>
                      
                    </tbody>
                  </table>

            
        </div>
    </div>
    

<%- include("footer") %>