<%- include("header", {title: "Author Profile"}) %>
    <% if(name) { %>
        <%- include("navbarDashboard", {name, role}) %>
    <% } else { %>
        <%- include("navbar") %>
    <% } %>
        
        
    <div class="container">
        <div class="row justify-content-center">
            <h3 class="card-title m-4">Hay <%= data.name %>, your birth day : <%= data.indonesiaDate %></h3>
            <hr>
            <h5>Following Author :</h5>
            <% data.Authors.forEach(el => { %>
                <div class="col-3 m-4">
                    <div class="card" style="width: 300px;">
                        <div class="card-body">
                          <a href="/<%= el.id %>/authordetail" class="btn btn-info btn-sm"><%= el.name %></a>

                            <a href="/<%= el.id %>/unfollow" class="btn btn-danger">Unfollow..</a>

                        </div>
                      </div>
                </div>
            <% }) %>
            
        </div>
    </div>
    

<%- include("footer") %>