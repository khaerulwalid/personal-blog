<%- include("header", {title: "Author Register"}) %>
    <%- include("navbar") %>
    <div class="container">
        <div style="display: flex; flex-direction: column; justify-content: center; align-items: center; margin: 60px auto;">
            <h1 class="fs-3">Login</h1>
            <% if(error) { %>
                <p class="text-danger"><%= error %></p>
            <% } %>
            <form style="width: 50%;" action="/login" method="post">
                <div class="form-group mb-2">
                  <label for="userName">Email address / Username</label>
                  <input type="text" class="form-control" id="userName" placeholder="Enter email or username" name="userName">
                  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group mb-2">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" id="password" placeholder="Password" name="password">
                  <small id="emailHelp" class="form-text text-muted">Your password is secured.</small>
                </div>
                <div class="form-group mb-2">
                    <label for="name">Role</label>
                    <select class="form-control" name="role">
                        <option selected disabled>--Select Role--</option>
                        <option value="Author">Author</option>
                        <option value="Visitor">Visitor</option>
                    </select>
                </div>
                
                <input type="submit" value="Login" class="btn btn-danger">
              </form>
        </div>
    </div>
    

<%- include("footer") %>